<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.schedule.ScheduleActivity">

    <!-- TODO -->

    <LinearLayout
        android:id="@+id/llTopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_gravity="top">

        <LinearLayout
            android:id="@+id/llWeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/lblMonday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/weekbar_element"
                android:text="@string/schedule_mon"></TextView>

            <TextView
                android:id="@+id/lblTuesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/weekbar_element"
                android:text="@string/schedule_tue"></TextView>

            <TextView
                android:id="@+id/lblWednesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/weekbar_element"
                android:text="@string/schedule_wed"></TextView>

            <TextView
                android:id="@+id/lblThursday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/weekbar_element"
                android:text="@string/schedule_thu"></TextView>

            <TextView
                android:id="@+id/lblFriday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/weekbar_element"
                android:text="@string/schedule_fri"></TextView>

            <TextView
                android:id="@+id/lblSaturday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/weekbar_element"
                android:text="@string/schedule_sat"></TextView>

            <TextView
                android:id="@+id/lblSunday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/weekbar_element"
                android:text="@string/schedule_sun"></TextView>




        </LinearLayout>

        <TextView
            android:id="@+id/lblCurrentDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



        </TextView>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/lstSessions"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/llTopBar"
        app:layout_constraintVertical_bias="0.0" />



<TextView
android:id="@+id/lblEmptyView"

android:layout_width="0dp"

android:layout_height="0dp"

android:gravity="center"

android:text="@string/schedule_lblEmptyView"

app:layout_constraintBottom_toBottomOf="parent"

app:layout_constraintEnd_toEndOf="parent"

app:layout_constraintStart_toStartOf="parent"

app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

